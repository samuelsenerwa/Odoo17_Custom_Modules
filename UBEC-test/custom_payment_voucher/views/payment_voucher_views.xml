<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_tree_payment_voucher" model="ir.ui.view">
        <field name="name">payment.voucher.list</field>
        <field name="model">payment.voucher</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'done'" decoration-info="state == 'draft'"
                  decoration-danger="state == 'cancel'">
                <field name="date" string="Date"/>
                <field name="projects" string="Projects"/>
                <field name="name" string="Name"/>
                <field name="payee_id" string="Customer/Vendor"/>
                <field name="contract_value" string="Contract Value"/>
                <field name="outstanding_debits" string="Outstanding Debits"/>
                <field name="partial_paid" string="Partial Paid"/>
                <field name="fully_paid" string="Fully Paid"/>
                <field name="state" string="Status"/>
                <field name="journal_count" string="Journal Entries" optional="hide"/>
                <field name="voucher_count" string="Payment Entries" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_form_payment_voucher" model="ir.ui.view">
        <field name="name">payment.voucher.form</field>
        <field name="model">payment.voucher</field>
        <field name="arch" type="xml">
            <form string="Payment Voucher">
                <header>
                    <button name="action_prepare" string="Submit" type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object" Class="btn-danger"
                            invisible="state != 'prepared' or partial_paid == True or fully_paid == True"/>

                    <button name="action_open_breakdown" type="object" string="Prepare Voucher"
                            icon="fa-bars" class="btn-primary"
                            groups="custom_payment_voucher.group_payment_voucher_preparer"
                            style="background-color: #7C7BAD; border-color: #7C7BAD;"
                            invisible="state != 'prepared' or journal_count == 0 or fully_paid == True"/>

                    <button name="create_journal_entries" type="object" icon="fa-dollar" string="Journal Entries"
                            invisible="state not in ('prepared') or journal_count != 0" class="btn-primary"/>
                    <!--                    <button name="update_payment_status" type="object" string="Update Status"/>-->

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,prepared,cancel"/>
                </header>
                <div groups="account.group_account_invoice,account.group_account_readonly" class="alert alert-info"
                     role="alert" invisible="outstanding_debits == 0 or state != 'prepared' or journal_count == 0">
                    This Vendor or Customer has outstanding credits of
                    <bold>
                        <field name="outstanding_debits"/>
                    </bold>
                    .
                </div>
                <sheet>
                    <field name="is_locked" invisible="True"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_journal_entries" type="object" icon="fa-dollar" string="Journal Items"
                                invisible="state not in ('prepared')">
                            <div class="o_stat_info">
                                <field name="journal_count" widget="statinfo"/>
                            </div>
                        </button>
                        <button name="action_open_voucher" type="object" string="Prepare Vouchers"
                                icon="fa-bars" class="btn-primary"
                                invisible="state not in ('prepared')">
                            <div class="o_stat_info">
                                <field name="voucher_count" widget="statinfo"/>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Partly Paid" invisible="not partial_paid" bg_color="text-bg-info"/>
                    <widget name="web_ribbon" text="Fully Paid" invisible="not fully_paid" bg_color="text-bg-info"/>
                    <widget name="web_ribbon" text="Cancel" invisible="state != 'cancel'" bg_color="text-bg-warning"/>

                    <div class="oe_title mb24">
                        <h1>
                            <field name="name" placeholder="Payment Voucher Number"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="projects" readonly="is_locked == True" required="1" placeholder="Select Project"/>
                            <field name="voucher_ref" placeholder="Enter Customer Ref"
                                   readonly="is_locked == True"
                                   invisible="projects == 'expenditure' or projects == False"/>
                            <field name="file_no" placeholder="Enter File No."
                                   readonly="is_locked == True"
                                   invisible="projects == 'expenditure' or projects == False"/>
                            <field name="transaction_date" readonly="is_locked == True" placeholder="Select Date"/>
                            <field name="payee_id"
                                   readonly="is_locked == True"
                                   options="{'no_create': True, 'no_open': True}"
                                   placeholder="Select Customer"/>
                            <field name="contract_value" placeholder="Enter Contract Value"
                                   readonly="is_locked == True"/>

                        </group>
                        <group>
                            <field name="outstanding_debits" string="Current Outstanding" readonly="1"/>
                            <field name="expense_account_id" options="{'no_create': True, 'no_open': True}"
                                   placeholder="Select Expenses Account" readonly="is_locked == True"/>
                            <!--                            <field name="purpose" readonly="is_locked == True" placeholder="Enter Purpose of the Payment"/>-->
                            <field name="partial_paid" readonly="is_locked == True" force_save="1" invisible="1"/>
                            <field name="fully_paid" readonly="is_locked == True" force_save="1" invisible="1"/>
                            <field name="attachment_ids" readonly="is_locked == True" widget="many2many_binary"/>
                        </group>
                        <label for="purpose" string="Purpose of Expenditure"/>
                        <field name="purpose" required="1" readonly="is_locked == True"/>
                    </group>

                    <notebook>
                        <page string="Approval Log" readonly="1">
                            <field name="approval_log_ids" options="{'no_create': True, 'no_open': True}"
                                   readonly="is_locked == True">
                                <list open="0" create="0" delete="0">
                                    <field name="date"/>
                                    <field name="action"/>
                                    <field name="comment"/>
                                    <field name="user_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Additional Information" readonly="is_locked == True">
                            <group>
                                <field name="company_id" readonly="is_locked == True"/>
                                <field name="currency_id" readonly="is_locked == True"/>
                                <field name="is_locked" readonly="is_locked == True"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_search_payment_voucher" model="ir.ui.view">
        <field name="name">payment.voucher.search</field>
        <field name="model">payment.voucher</field>
        <field name="arch" type="xml">
            <search string="Search Payment Vouchers">
                <!-- Searchable fields -->
                <field name="name"/>
                <field name="payee_id"/>
                <field name="date"/>
                <field name="state"/>

                <!-- Quick Filters -->
                <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="filter_prepared" string="Prepared" domain="[('state','=','prepared')]"/>
                <filter name="filter_cancelled" string="Cancelled" domain="[('state','=','cancel')]"/>


                <!-- Group By -->
                <group expand="1" string="Group By">
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_payee" string="Customer/Vendor" context="{'group_by': 'payee_id'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'date'}"/>
                    <filter name="group_by_projects" string="Projects" context="{'group_by': 'projects'}"/>
                    <group string="Status">
                        <filter name="filter_fully_paid" string="Fully Paid" context="{'group_by': 'fully_paid'}"/>
                        <filter name="filter_partial_paid" string="Partially Paid"
                                context="{'group_by': 'partial_paid'}"/>
                    </group>

                </group>
            </search>
        </field>
    </record>


    <record id="action_payment_voucher" model="ir.actions.act_window">
        <field name="name">Payment Vouchers</field>
        <field name="res_model">payment.voucher</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="custom_payment_voucher.view_search_payment_voucher"/>
    </record>
    <!-- Main Menu  -->
    <menuitem
            id="main_payment_voucher"
            name="Payment Voucher Management"
            sequence="3"
            web_icon="custom_payment_voucher,static/description/icon.png"/>
    <!--Configuration -->
    <menuitem
            id="menu_payment_voucher_config"
            name="Configuration"
            sequence="100"
            parent="custom_payment_voucher.main_payment_voucher"/>
    <!-- For creating Menu for Payment Voucher -->
    <menuitem
            id="menu_payment_voucher"
            name="Payment Vouchers"
            sequence="10"
            parent="custom_payment_voucher.main_payment_voucher"
            action="custom_payment_voucher.action_payment_voucher"/>
</odoo>
