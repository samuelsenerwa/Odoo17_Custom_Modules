<odoo>


    <template id="report_coa_hierarchy_print">
        <t t-call="web.html_container">
            <!-- css -->
            <link rel="stylesheet"
                  href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"/>
            <link rel="stylesheet" type="text/css"
                  href="/account_parent/static/src/scss/coa_hierarchy.scss"/>


            <!-- report body -->
            <t t-call='account_parent.report_coa_body_pdf'/>

            <!-- js -->
            <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
        </t>
    </template>

    <template id="report_coa_body_pdf">
        <div class="container o_coa_reports_page o_coa_reports_no_print">
            <div>
                <div class="row">
                    <h2 t-if="heading">
                        <span class="text-center" t-out="heading"/>
                    </h2>
                </div>
                <div class="row mt32 mb32">
                    <div class="col-auto">
                        <strong>Target Moves :</strong>
                        <span t-esc="user_data['target_move']"/>
                        <br/>
                    </div>
                    <div class="col-auto" name="date_ranges">
                        <t t-if="user_data['date_from']">
                            <strong>Date from :</strong>
                            <span t-esc="user_data['date_from']"/>
                            <br/>
                        </t>
                        <t t-if="user_data['date_to']">
                            <strong>Date to :</strong>
                            <span t-esc="user_data['date_to']"/>
                        </t>
                    </div>
                </div>

                <div class="o_coa_reports_table table-responsive">
                    <table class="table table-striped table-sm"
                           style="border-spacing:10px; width: 100%;">
                        <thead>
                            <tr>
                                <th class="text-center">Code</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Type</th>
                                <t t-if="user_data['show_initial_balance']">
                                    <th class="text-right">Initial Balance</th>
                                </t>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                                <t t-if="show_initial_balance">
                                    <th class="text-right">Ending Balance</th>
                                </t>
                                <t t-else="">
                                    <th class="text-right">Balance</th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="lines" t-as="a">
                                <t t-set="space_td"
                                   t-value="'background-position: ' + str(19*(a['level']-1)) + 'px; padding-left: ' + str((4 + 19*(a['level']-1))) + 'px;'"/>
                                <t t-set="trclass" t-value="'o_coa_default_style'"/>
                                <t t-if="a.get('type') == 'view'">
                                    <t t-set="trclass" t-value="'o_coa_level'"/>
                                </t>
                                <t t-set="domainClass" t-value="'o_coa_domain_line'"/>
                                <t t-if="a['unfoldable'] == false">
                                    <t t-set="domainClass"
                                       t-value="'o_coa_domain_line_1'"/>
                                </t>
                                <tr t-att-data-type="a['type']"
                                    t-att-data-unfold="a['unfoldable']"
                                    t-att-data-parent_id="a['parent_id']"
                                    t-att-data-id="a['id']"
                                    t-att-data-model_id="a['model_id']"
                                    t-att-data-name="a['name']"
                                    t-att-class="trclass">
                                    <t t-set="tdclass" t-value="'treeview-td'"/>
                                    <td t-att-data-id="a.get('id')"
                                        t-att-data-model_id="a['model_id']"
                                        t-att-data-name="a.get('name')"
                                        t-att-data-wiz_id="a['wiz_id']"
                                        t-att-data-level="a['level']"
                                        t-attf-class="#{tdclass}">
                                        <span t-att-style="space_td"></span>
                                        <span t-att-data-active-id="a['id']"
                                              t-att-class="a['type'] + ' ' + domainClass"></span>
                                        <t t-if="a.get('unfoldable')">
                                            <span>
                                                <i class="fa fa-caret-right"></i>
                                            </span>
                                        </t>
                                        <t t-out="a['code']"/>
                                    </td>
                                    <td>
                                        <t t-out="a['name']"/>
                                    </td>
                                    <td>
                                        <t t-out="a['ac_type']"/>
                                    </td>
                                    <t t-if="a.get('show_initial_balance')">
                                        <td class="text-right">
                                            <t t-out="a['initial_balance']"/>
                                        </td>
                                    </t>
                                    <td class="text-right">
                                        <t t-out="a['debit']"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-out="a['credit']"/>
                                    </td>
                                    <t t-if="a.get('show_initial_balance')">
                                        <td class="o_list_number text-right">
                                            <t t-out="a['ending_balance']"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td class="o_list_number text-right">
                                            <t t-out="a['balance']"/>
                                        </td>
                                    </t>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>
</odoo>
