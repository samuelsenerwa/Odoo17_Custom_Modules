<odoo>

    <template id="invoice_report_print_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="text-center"><span t-esc="report_title" /></h2>
                            <br />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <h6 class="text-center">From Date: <span t-esc="report_data['from_date']" /></h6>
                        </div>
                        <div class="col-6">
                            <h6 class="text-center">To Date: <span t-esc="report_data['to_date']" /></h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-end">VAT 15%</th>
                                        <th class="text-end">Non-Taxable</th>
                                        <th class="text-end">Taxable Amount</th>
                                        <th class="text-end">Gross</th>
                                        <th>VAT NO.</th>
                                        <th class="text-start"> <span t-esc="'Customer' if report_data['move_report_type'].startswith('out') else ('Vendor' if report_data['move_report_type'].startswith('in') else 'Contact')" /></th>
                                        <th class="text-start" t-if="report_data['show_user']"> <span t-esc="'Salesperson' if report_data['move_report_type'] == 'out' else ('Responsible' if report_data['move_report_type'] == 'in' else 'User')" /></th>
                                        <th>Type</th>
                                        <th>Inv Date</th>
                                        <th>Inv No.</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody class="table_data">
                                    <tr t-foreach="report_data['invoices']" t-as="inv">
                                        <td class="text-end"><t t-out="inv['amount_tax_html']" /></td>
                                        <td class="text-end"><t t-out="inv['amount_non_taxable_html']" /></td>
                                        <td class="text-end"><t t-out="inv['amount_taxable_html']" /></td>
                                        <td class="text-end"><t t-out="inv['amount_total_html']" /></td>
                                        <td><span t-esc="inv['vat'] or ''" /></td>
                                        <td><span t-esc="inv['partner'] or ''" /></td>
                                        <td t-if="report_data['show_user']"><span t-esc="inv['user']"/></td>
                                        <td><span t-esc="inv['type']" /></td>
                                        <td><span t-esc="inv['date']" /></td>
                                        <td><span t-esc="inv['number']" /></td>
                                        <td><span t-esc="inv_index + 1" /></td>
                                    </tr>
                                    <tr>
                                        <td t-if="report_data['show_user']"/>
                                        <td colspan="10"></td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr style="background-color: #cecece;">
                                        <th class="text-end"><t t-out="report_data['total_tax_html']" /></th>
                                        <th class="text-end"><t t-out="report_data['total_non_taxable_html']" /></th>
                                        <th class="text-end"><t t-out="report_data['total_taxable_html']" /></th>
                                        <th class="text-end"><t t-out="report_data['total_amount_html']" /></th>
                                        <th t-if="report_data['show_user']"/>
                                        <th colspan="6"></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
    <template id="account_parent_print_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="text-center" t-if="heading"><span t-out="heading" /></h2>
                            <br />
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-auto">
                            <strong>Target Moves :</strong> <span t-esc="user_data['target_move']"/><br/>
                        </div>
                        <div class="col-auto" name="date_ranges">
                            <t t-if="user_data['date_from']"><strong>Date from :</strong> <span t-esc="user_data['date_from']"/><br/></t>
                            <t t-if="user_data['date_to']"><strong>Date to :</strong> <span t-esc="user_data['date_to']"/></t>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-sm table-borderless">
                            <thead>
                                <tr>
                                    <th class="text-center"><strong>Code</strong></th>
                                    <th class="text-center"><strong>Name</strong></th>
                                    <th class="text-center"><strong>Type</strong></th>
                                    <th class="text-end" t-if="user_data['show_initial_balance']">
                                        <strong>Initial Balance</strong>
                                    </th>
                                    <th class="text-end"><strong>Debit</strong></th>
                                    <th class="text-end"><strong>Credit</strong></th>
                                    <th class="text-end">
                                        <t t-if="show_initial_balance">
                                            <strong>Ending Balance</strong>
                                        </t>
                                        <t t-else="">
                                            <strong>Balance</strong>
                                        </t>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="lines" t-as="a" >
                                    <t t-set="space_td" t-value="'background-position: ' + str(19*(a['level']-1)) + 'px; padding-left: ' + str((4 + 19*(a['level']-1))) + 'px;'"/>
<!--                                        <t t-set="trclass" t-value="'o_coa_reports_default_style'"/>-->
<!--                                        <t t-if="a.get('type') == 'view'"><t t-set="trclass" t-value="'o_coa_level'"/></t>-->
<!--                                    <t t-set="domainClass" t-value="'o_coa_domain_line'"/>-->
<!--                                    <t t-if="a['unfoldable'] == false">-->
<!--                                        <t t-set="domainClass" t-value="'o_coa_domain_line_1'"/>-->
<!--                                    </t>-->

<!--                                            <t t-set="tdclass" t-value="'treeview-td'" />-->
                                    <td>
                                        <span t-att-style="space_td"></span>
                                        <t t-if="a.get('unfoldable')">
                                            <span >
                                                <i class="fa fa-caret-right"></i>
                                            </span>
                                        </t>
                                        <span t-out="a['code']" />
                                    </td>
                                    <td>
                                        <span t-out="a['name']" />
                                    </td>
                                    <td>
                                        <span t-out="a['ac_type']" />
                                    </td>
                                    <td class="text-end" t-if="a.get('show_initial_balance')">
                                        <span t-out="a['initial_balance']"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-out="a['debit']" />
                                    </td>
                                    <td class="text-end">
                                        <span t-out="a['credit']" />
                                    </td>
                                    <td class="text-end" >
                                        <t t-if="a.get('show_initial_balance')">
                                            <span t-out="a['ending_balance']"/>
                                        </t>
                                        <t t-else="">
                                            <span t-out="a['balance']" />
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- REPORT ACTIONS -->
    <record id="account_parent_report_print" model="ir.actions.report">
        <field name="name">Chart of Accounts hierarchy Report</field>
        <field name="model">account.account</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account_parent.account_parent_print_template</field>
        <field name="report_file">account_parent.account_parent_print_template</field>
    </record>

</odoo>
