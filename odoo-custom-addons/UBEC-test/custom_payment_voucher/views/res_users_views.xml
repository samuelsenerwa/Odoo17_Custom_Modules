<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherited user view for Adding custom signature.  -->
        <record id="view_users_form" model="ir.ui.view">
            <field name="name">view.users.form.inherit.custom.payment.voucher</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="after">
                    <page string="Signature" name="signature">
                        <group>
                            <field name="user_signature" widget="image" class="oe_avatar" options="{'size': (128, 128)}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>